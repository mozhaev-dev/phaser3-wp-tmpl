{
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "target": "es2015",
    "lib": ["es2017"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"]
}
